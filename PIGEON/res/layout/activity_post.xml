<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#f9e1b3" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        >
    <TextView
        android:id="@+id/textview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:textColor="#fec031"
        android:text="Job name" />

    <EditText
        android:id="@+id/job_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textview_1"
        android:layout_margin="5dp"
        android:background="#c7b19a"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:ems="10" />

    <EditText
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3"
        android:layout_margin="5dp"
        android:background="#c7b19a"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <EditText
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/job_name_text"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/textview_1"
        android:background="#c7b19a"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_text"
        android:layout_alignLeft="@+id/textview_1"
        android:layout_below="@+id/textview_1"
        android:layout_margin="5dp"
        android:textColor="#fec031"
        android:text="Price" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="24dp"
        android:textColor="#fec031"
        android:text="Drescription" />
    </RelativeLayout>
    
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="#ff4c67"
        android:textColor="#ffffff"
        android:text="Post" 
        android:onClick="post_click"/>

</RelativeLayout>
