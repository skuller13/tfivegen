<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9e1b3"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        >
	    <TextView
	        android:id="@+id/textview_1"
	        android:textColor="#fec031"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="5dp"
	        android:text="Username" />
	    
	    <EditText
	        android:id="@+id/username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/textview_1"
	        android:layout_alignLeft="@+id/textView2"
	        android:singleLine="true"
	        android:textColor="#ffffff"
	        android:background="#c7b19a"
	        android:layout_margin="5dp"
	        android:ems="10" />
	    
	    <TextView
	        android:id="@+id/textView2"
	        android:textColor="#fec031"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textview_1"
	        android:layout_below="@+id/username"
	        android:text="Password" />
	    
	    <EditText
	        android:id="@+id/password_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView2"
	        android:background="#c7b19a"
	        android:textColor="#ffffff"
	        android:singleLine="true"
	        android:layout_margin="5dp"
	        android:layout_below="@+id/textView2"
	        android:ems="10"
	        android:inputType="textPassword" />
	    
	    <EditText
	        android:id="@+id/password_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textView2"
	        android:singleLine="true"
	        android:textColor="#ffffff"
	        android:layout_below="@+id/password_1"
	        android:background="#c7b19a"
	        android:layout_margin="5dp"
	        android:ems="10"
	        android:inputType="textPassword" />
	
	    <TextView
	        android:id="@+id/textView3"
	        android:textColor="#fec031"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textview_1"
	        android:layout_below="@+id/password_2"
	        android:text="Email" />
	
	    <EditText
	        android:id="@+id/email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:layout_alignLeft="@+id/textView3"
	        android:layout_below="@+id/textView3"
	        android:singleLine="true"
	        android:background="#c7b19a"
	        android:layout_margin="5dp"
	        android:ems="10"
	        android:inputType="textEmailAddress" />
	    
	    
	
	    <TextView
	        android:id="@+id/textView4"
	        android:textColor="#fec031"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/textview_1"
	        android:layout_below="@+id/email"
	        android:text="Phone" />
	
	    
	
	    <EditText
	        android:id="@+id/phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:layout_alignLeft="@+id/textView4"
	        android:background="#c7b19a"
	        android:singleLine="true"
	        android:layout_below="@+id/textView4"
	        android:layout_margin="5dp"
	        android:ems="10"
	        android:inputType="phone" />
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#ff4c67"
        android:onClick="register_click"
        android:text="Register"
        android:textColor="#ffffff" />

</RelativeLayout>
